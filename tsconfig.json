{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "strict": true,
    "types": [
      "@wdio/types",
      "@types/jest",
      "@wdio/globals/types",
      "@wdio/mocha-framework",
      "node"
    ]
  },
  "include": ["./src/**/*", "./spec/**/*"],
  "exclude": ["./src/__tests__/**/*"]
}
